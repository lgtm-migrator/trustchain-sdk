{
  "root": "packages/platform",
  "sourceRoot": "packages/platform/src",
  "targets": {
    "install": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm install --prefix packages/platform"
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/platform",
        "main": "packages/platform/src/index.ts",
        "tsConfig": "packages/platform/tsconfig.lib.json",
        "assets": ["packages/platform/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/platform/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/platform"],
      "options": {
        "jestConfig": "packages/platform/jest.config.js",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "trackDeps": true,
        "commitMessageFormat": "fix(${projectName}): release version ${version}",
        "postTargets": ["platform:deploy"]
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}
