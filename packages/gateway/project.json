{
  "root": "packages/gateway",
  "sourceRoot": "packages/gateway/src",
  "targets": {
    "install": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm install --prefix packages/gateway"
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/gateway",
        "main": "packages/gateway/src/index.ts",
        "tsConfig": "packages/gateway/tsconfig.lib.json",
        "assets": [
          "packages/gateway/*.md"
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/gateway/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/packages/gateway"
      ],
      "options": {
        "jestConfig": "packages/gateway/jest.config.js",
        "passWithNoTests": true
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "commitMessageFormat": "fix(${projectName}): release version ${version}",
        "postTargets": [
          "gateway:deploy"
        ]
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}