{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/wallet/src",
  "targets": {
    "install": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "npm install --prefix packages/wallet"
      }
    },
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/wallet",
        "main": "packages/wallet/src/index.ts",
        "tsConfig": "packages/wallet/tsconfig.lib.json",
        "project": "packages/wallet/package.json",
        "entryFile": "packages/wallet/src/index.ts",
        "format": ["esm", "umd"],
        "buildableProjectDepsInPackageJsonType": "dependencies"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/wallet/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/wallet"],
      "options": {
        "jestConfig": "packages/wallet/jest.config.ts",
        "passWithNoTests": true,
        "runInBand": true,
        "codeCoverage": true,
        "coverageReporters": ["lcov"]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "trackDeps": true,
        "commitMessageFormat": "fix(${projectName}): release version ${version}",
        "postTargets": ["wallet:deploy"]
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}
